// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int    @id @default(autoincrement())
  name        String
  email       String @unique
  picture     String
  role        String
  linkedin    String
  github      String
  hardskills  String
  softskills  String
  otherskills String
  contact     String
  city        String
  state       String
  country     String
}

model Projects {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  link        String
  image       String
  user        User   @relation(fields: [userId], references: [id])
  userId      Int
}

model Login {
  user_id  Int @relation(fields: [user_id], references: [id])
  email   String
  password String
}